<h1>Bloody Red Blog</h1>

<%= link_to "New Article", new_blog_article_path %>
<br>
<h1>Listing Articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |post| %>
    <tr>
      <td><%= link_to post.title, post %></td>
      <td><%= post.content %></td>
    </tr>
  <% end %>
</table>